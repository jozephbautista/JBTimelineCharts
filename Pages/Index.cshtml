    }

        .ui-dialog:after {
            position: absolute;
            width: 20px;
            height: 20px;
            border-top: 1px solid #EDEDED;
            border-right: 0px solid #888888;
            border-bottom: 0px solid #888888;
            border-left: 1px solid #EDEDED;
            top: 0%;
            left: 50%;
            margin-left: -10px;
            content: '';
            transform: rotate(45deg);
