<script>
    function functionCallback(userid) {
        alert('The user ID is: ' + userid);
    }

    $("#dialog").dialog({
        autoOpen: false,
        resizable: false,
        draggable: true,
        drag: function (event, ui) {
            var scrolltop = parseInt($(this).data("startingScrollTop"));
            ui.position.top -= $(this).parent().scrollTop() - scrolltop;
        }
    });

    $("#dialog").on("dialogdrag", function (event, ui) {
        var pageYOffset = window.pageYOffset;
        var pageXOffset = window.pageXOffset;
        $("#dialog").dialog("option", "position", [event.pageX - pageXOffset, event.pageY - pageYOffset]).dialog("open");
        return;
    });

    $(".ui-dialog-titlebar").hide();
</script>

<style>
